{
  "name": "@xene/test",
  "version": "0.0.19",
  "description": "Xene framework test utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/dempfi/xene",
  "author": "Ike Ku <dempfi@yahoo.com>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "rm -rf dist && tsc && nyc ava -c=5 --verbose",
    "lint": "tslint --project tsconfig.json -t stylish",
    "build": "rm -rf dist && tsc -t ES6 && rm -rf dist/test",
    "watch": "tsc -w --pretty"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "babel": {},
    "files": [
      "dist/test/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/test/**/*.js"
    ],
    "reporter": [
      "html"
    ],
    "check-coverage": true,
    "sourceMap": true
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@xene/core": "^0.0.15",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.65",
    "@types/node": "^8.0.24",
    "ava": "^0.22.0",
    "nyc": "^11.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.4.2"
  }
}
